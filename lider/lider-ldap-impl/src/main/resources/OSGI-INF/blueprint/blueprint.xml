<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

	<service ref="ldapService" interface="tr.org.liderahenk.lider.core.api.ldap.ILDAPService" />

	<bean id="ldapService" class="tr.org.liderahenk.lider.ldap.LDAPServiceImpl"
		init-method="init" destroy-method="destroy">
		<property name="configurationService" ref="configurationService" />
		<property name="cacheService" ref="cacheService" />
	</bean>
	
	<reference id="configurationService" interface="tr.org.liderahenk.lider.core.api.configuration.IConfigurationService" />
	<reference id="cacheService" interface="tr.org.liderahenk.lider.core.api.caching.ICacheService" />
</blueprint>